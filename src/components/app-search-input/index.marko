class { 
  onCreate() {
    this.state = {
       value: '',
    };   
  }  
  // simple debounce to prevent rate limiting (even though testing it, i got rate limited)
  debounce(fn, delay) {
    if (this.timer) {
      clearTimeout(this.timer);
    }
    this.timer = setTimeout(fn, delay);
  } 
  handleInput(e) {   
    this.debounce(() => this.emit("app-search", e.target.value), 500);
  } 
}

